{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}
{% block navbar %}{% include 'navbar.html.twig' %}{% endblock %}

{% block body %}
    <div class="container-fluid page-content">
        <h1>User Lists</h1>
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Datecreate</th>
                <th>Updatedate</th>
                <th colspan="2">actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.lastname }}</td>
                    <td>{{ user.datecreate ? user.datecreate|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ user.updatedate ? user.updatedate|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a href="{{ path('user_show', {'id': user.id}) }}"><i class="fa fas fa-eye"></i></a>
                    </td>
                    <td>
                        <a href="{{ path('user_edit', {'id': user.id}) }}"><i class="fa fas fa-user-edit"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
